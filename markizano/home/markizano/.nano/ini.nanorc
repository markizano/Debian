# ini highlighting
syntax "ini" "\.ini(\.old|~)?$"
# equal sign
color green "="
# numbers
color brightblue "-?[0-9\.]+\s*($|;)"
# ON/OFF
color brightmagenta "ON|OFF|On|Off|on|off\s*($|;)"
# sections
color brightcyan "^\s*\[.*\]"
# values
color brightred "(=).*$"
# keys
color cyan "^\s*[a-zA-Z0-9_\.]+"
# comments
color black ";.*$"

