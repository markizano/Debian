#!/bin/bash

TARGET=/tmp/lwjgl-2.8.5.zip

[ -r "$TARGET" ] || wget 'http://iweb.dl.sourceforge.net/project/java-game-lib/Official%20Releases/LWJGL%202.8.5/lwjgl-2.8.5.zip' -O "$TARGET"
unzip -d /tmp/lwjgl/ "$TARGET"
cp /tmp/lwjgl/jar/lwjgl{,_util}.jar /tmp/lwjgl/jar/jinput.jar $HOME/.minecraft/bin/
cp /tmp/lwjgl/native/linux/lib* $HOME/.minecraft/bin/natives/
for lib in lwjgl.jar jinput.jar jwlgl_util.jar;
	sed -i -r "s/$lib=\w{32}/$lib=$(md5sum $HOME/.minecraft/bin/$lib | cut -d\  -f1)/" $HOME/.minecraft/bin/md5s
done
