#!/bin/bash

if [ ! -f ~/.FF_once ]; then
	touch ~/.FF_once;
fi

pgrep thunderbird   >/dev/null || thunderbird 2>/dev/null>/dev/null & sleep 2s
pgrep chrome        >/dev/null || google-chrome 2>/dev/null >/dev/null & sleep 2s
#pgrep firefox      >/dev/null || firefox -new-tab `cat ~/.FF` `cat ~/.FF_once` 2>/dev/null>/dev/null & sleep 5s
pgrep exaile        >/dev/null || exaile 2>/dev/null>/dev/null & sleep 5s
pgrep pidgin        >/dev/null || pidgin 2>/dev/null>/dev/null & sleep 2s
pgrep xchat         >/dev/null || xchat 2>/dev/null >/dev/null & sleep 2s
pgrep deluge        >/dev/null || deluge 2>/dev/null >/dev/null & sleep 2s
#pgrep tweetdeck    >/dev/null || tweetdeck 2>/dev/null>/dev/null & sleep 2s

rm ~/.FF_once;
[ -f ~/.I/run ] && . ~/.I/run;
