#!/bin/bash
if [ "$1" != "" ]; then
host="$1" 
elif [ "$1" == "" ]; then
        while [ "${host}" == "" ]; do
                echo -n "Host to Check?: "
                read host;
                if [ "${host}" != "" ]; then
                        break;
                fi
        done
fi

if [ "${host}" == "" ]; then
        echo "Host field empty!?!?";
        exit 0;
else
        host -t a ${host};
        fping -t15 ${host};
        exit 1;
fi
