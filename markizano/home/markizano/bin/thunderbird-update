#!/bin/bash

ver=$1
target="/home/Media/Downloads/Linux/Mozilla/thunderbird-${ver}.tbz2"

if [ $UID -ne 1000 ]; then
	echo "This can only be run by the Kizano..." >/dev/stderr
	exit 1;
fi

if [ -z "$1" ]; then
	echo "Usage $(basename $0): [version]"
	exit 8
else
	ver="$1"
fi

wget -c "http://download.mozilla.org/?product=thunderbird-$ver&os=linux&lang=en-US" -O $target
sudo tar -jxf $target -C /usr/local/lib/mozilla
sudo rm /usr/bin/thunderbird && sudo ln -s /usr/local/lib/mozilla/thunderbird/thunderbird /usr/bin/thunderbird
notify-send -u low -t 500 -i thunderbird Thunderbird 'Update complete.'
pgrep thunderbird >/dev/null && ps -Af | egrep -v 'update|grep' | grep thunderbird
echo "Please restart ThunderBird to enforce updates.";
