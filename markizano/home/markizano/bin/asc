#!/usr/bin/php
<?php

$arg = $_SERVER['argv'];
if(!isset($arg[1]) || empty($arg[1]) || $arg[1] == '--help'){
?>
Usage: asc [char] [-n]
char	- Any ASCII character - will be translated to it's base10 equivalant.
-n		- If present, output a trailing newline
<?php
	return 0;
}

if(strLen($arg[1]) > 1){
	foreach(str_split($arg[1]) as $i => $chr){
		if($i && !isset($arg[2]) || empty($arg[2])) echo ' ';
		elseif($i) echo $arg[2];
		echo ord($chr);
	}
	echo chr(10);
}else{
	echo ord($arg[1]);
	if(isset($arg[2]) && $arg[2] == '-n') echo chr(10);
}
