#!/usr/bin/php
<?php
$digits = explode("\n", `ls -laR |grep -Po \\(root\\|daemon\\|bin\\|sys\\|adm\\|tty\\|disk\\|lp\\|mail\\|news\\|uucp\\|man\\|proxy\\|kmem\\|dialout\\|fax\\|voice\\|cdrom\\|floppy\\|tape\\|sudo\\|audio\\|dip\\|backup\\|operator\\|list\\|irc\\|src\\|gnats\\|shadow\\|utmp\\|video\\|sasl\\|plugdev\\|staff\\|games\\|users\\|nogroup\\|libuuid\\|crontab\\|scanner\\|ssl\\|Debian\\|mlocate\\|ssh\\|messagebus\\|avahi\\|avahi\\|netdev\\|bind\\|lpadmin\\|gdm\\|stb\\|haldaemon\\|powerdev\\|postgres\\|sambashare\\|winbindd\\|markizano\\|mysql\\|fuse\\|nagios\\|citadel\\|vboxusers\\|admin\\|htconf\\|asthralios\\|kizano\\|HIT\\|php\\|iroch\\)[\ ]*[0-9]*|grep -o [0-9]*\$`);
$total = 0;
foreach($digits as $digit)
	$total += (int)$digit;
$B = $total;
$K = $total / 1024;
$M = $K / 1024;
$G = $M / 1024;
echo "B: $B
K: $K
M: $M
G: $G

";

