#!/usr/bin/php
<?php

$args = $_SERVER['argv'];

if(!isset($args[1]) || !isset($args[2]) || strToLower($args[1]) == '-help' || strToLower($args[1]) == '-h'){
?>
	Usage: explode [delimiter] [string]
<?php
	return null;
}

ob_start();
print_r(explode($args[1], $args[2]));
$print_r = explode("\n", ob_get_contents());
ob_end_clean();

foreach($print_r as $print)
	if(strPos($print, '=') !== false)
		print "$print\n";

