#!/bin/bash

ver=$1
target="/home/Media/Downloads/Linux/Mozilla/firefox-${ver}.tbz2"

if [ $UID -ne 1000 ]; then
	echo "This can only be run by the Kizano..." >/dev/stderr
	exit 1;
fi

if [ -z "$1" ]; then
	echo "Usage $(basename $0): [version]"
	exit 8
else
	ver="$1"
fi

wget -c "http://download.mozilla.org/?product=firefox-$ver&os=linux&lang=en-US" -O $target
sudo tar -jxf $target -C /usr/local/lib/mozilla
sudo rm /usr/bin/firefox && sudo ln -s /usr/local/lib/mozilla/firefox/firefox /usr/bin/firefox
notify-send -u low -t 500 -i firefox firefox 'Update complete.'
pgrep firefox >/dev/null && ps -Af | egrep -v 'update|grep' | grep firefox
echo "Please restart firefox to enforce updates.";
