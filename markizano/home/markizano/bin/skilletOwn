#!/bin/bash

if [ "$1" == "-R" ] || [ "$1" == "-r" ]; then
	chmod 770 ${*};
	chown skillet32:kizano -R ${*};
	echo -e "Recrusively Took ${*}";
elif [ -d $1 ] || [ -f $1 ]; then
	chmod 770 ${*};
	chown skillet32:kizano ${*};
	echo -e "Took ${*}";
else
	echo -e "takeOwn: Cannot Stat ${*}. No such file or directory.";
fi

