#!/bin/php
<?php

$link = mysql_connect('phpmyadmin', 'root', 'mmdesign');
$xclip = array(
	'clip' => `xclip -o -selection clip`,
	'p' => `xclip -o -selection p`,
	's' => `xclip -o -selection s`
);

echo "\033[32mClipBoard:\033[00m\n".mysql_real_escape_string($xclip['clip'], $link).chr(10).chr(10);
echo "\033[32mPrimary:\033[00m\n".mysql_real_escape_string($xclip['p'], $link).chr(10).chr(10);
echo "\033[32mSecondary:\033[00m\n".mysql_real_escape_string($xclip['p'], $link).chr(10).chr(10);

mysql_close($link);
