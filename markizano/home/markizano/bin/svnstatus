#!/usr/bin/php
<?php

$cmd = "ls -l -- `svn status|grep -v ? |grep -oP '[0-9a-zA-Z\\._\\/\\-]*$'` > change";
system($cmd);
system("cat change|grep -oP '[0-9]{4}\\-[0-9]{2}\\-[0-9]{2}\ [0-9]{2}\:[0-9]{2}\ [0-9a-zA-Z\\._\\/\\-]*$' > chg");
$list = `cat chg | sort -nr`;
system("rm change chg");
$replace = preg_replace("/([0-9]{4})\\-([0-9]{2})\\-([0-9]{2})\ ([0-9]{2}):([0-9]{2})\ /i", "$2-$3-$1/$4:$5\t| ~/", $list);
echo $replace;


