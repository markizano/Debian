#!/bin/bash

CHUSR=markizano
CHGRP=kizano

if [ "$1" == "-R" ]; then
    files="$(echo "$@"|sed -r 's/^\s?-R\s//')"
    sudo chown $CHUSR:$CHGRP -R $files;
    sudo find $files -type f -exec chmod 644 {} \;
    sudo find $files -type d -exec chmod 755 {} \;
    echo -e "Recrusively Took `realpath $files`";
elif [ -d "$1" ] || [ -f "$1" ]; then
    sudo chown $CHUSR:$CHGRP "$@";
    for file in $@; do
    	if [ -f "$file" ]; then
    		chmod 644 "$file";
    	elif [ -d "$file" ]; then
    		chmod 755 "$file";
    	else
    		echo "Cannot stat \`$file'. No such file or directory." 1>&2;
    	fi
    done;
    echo -e "Took `realpath $@`";
else
    echo -e "takeOwn: Cannot stat \`$@'. No such file or directory." 1>&2;
fi
